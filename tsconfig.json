{
  "compilerOptions": {
    "jsx": "react",
    "experimentalDecorators": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "declaration": true,
    "isolatedModules": false,
    "outDir": "./dist",
    "paths": {
      "@steroidsjs/core/*": [
        "../react/src/*"
      ],
      "@steroidsjs/bootstrap/*": [
        "../react-bootstrap/src/*"
      ]
    },
    "lib": [
      "DOM",
      "ES2016"
    ],
    "types": [
      "node"
    ],
  },
  "include": [
    "./src/**/*",
    "../react/src/index.d.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}
